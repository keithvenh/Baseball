<article class="user-forms-container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "user-form", method: :put }) do |f| %>
  <h1 class="title">Sultan of Stat</h1>
  <h2 class="form-title">Update Your Information!</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :first_name, autocomplete: "first_name", class: 'user-input' %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, autocomplete: "last_name", class: 'user-input' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'user-input' %>
  </div>

  <div class="field">
    <%= f.text_field :username, class: 'user-input' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'New Password', class: 'user-input' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'user-input' %>
  </div>

  <div class="field">
    <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current Password", class: 'user-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "button button-form button-primary" %>
  </div>
<% end %>

<h3 class="cancellation">Cancel my account</h3>

<p class="cancellation-text;">Are you unhappy with Sultan of Stat?<br/> Let us know and we'd be glad to help figure out any issues you are having! <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button button-danger"  %></p>

<%= link_to "Back", :back %>
</article>