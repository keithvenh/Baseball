<article class="user-forms-container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "user-form"}) do |f| %>

  <h1 class="title">Sultan of Stat</h1>
  <h2 class="form-title">Welcome!</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "First Name", class: "user-input" %>
  </div>

  <div class="field">

    <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "Last Name", class: "user-input" %>
  </div>
  

  <div class="field">
    <%= f.text_field :username, placeholder: "Username", class: "user-input" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "user-input" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "user-input" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "user-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button button-primary" %>
  </div>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</article>